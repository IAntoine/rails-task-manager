<h1>Tasks:</h1>

<% @tasks.each do |task| %>
  <h3><%= link_to task.title, task_path(task) %></h3>
  <p><%= link_to 'Edit', edit_task_path(task) %></p>
   <%= link_to "Delete", task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
  <hr>
<% end %>
<p><%= link_to 'New Task', new_task_path %></p>
